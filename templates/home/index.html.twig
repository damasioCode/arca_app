{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container d-flex flex-column align-items-center w-100">
    <!-- Content here -->
    <h1>Business Finder</h1>

    
    <div 
        class="d-flex mt-4 justify-content-between align-items-center w-100"
        style="max-width: 500px"    
    >
        <form class="w-100 mt-4" method="GET" action="{{ path('app_home') }}">
            <input 
                type="text"
                class="form-control text-center"
                name="q"
                placeholder="What are you looking for?"
                required
            >

            <button type="submit" class="btn btn-primary mt-3 d-block mx-auto">Search</button>
        </form>            
    </div>
</div>
{% endblock %}
