{% extends 'base.html.twig' %}

{% block title %}Business index{% endblock %}

{% block body %}
    <div class="container">
        <!-- Content here -->
        <h1>Business Finder Admin</h1>

        <div class="d-flex mt-4 justify-content-between align-items-center">
            <h2>Businesses</h2>
            <a class="btn btn-success" href="{{ path('app_business_new') }}">Add Business</a>
        </div>

        <table class="table table-striped">
            {% for business in businesses %}
                <tr>
                    <td class="d-flex align-items-center justify-content-between">
                        <div>
                            <a class="" href="{{ path('app_business_edit', {'id': business.id}) }}">    
                                {{ business.id }}. {{ business.title }}
                            </a>
                        </div>
                        
                        <div>
                            <a class="btn btn-success" href="{{ path('app_business_show', {'id': business.id}) }}"><i class="bi bi-eye"></i></a>
                            
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="d-flex align-items-center justify-content-between">
                        no records found
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        
    </div>
{% endblock %}
